@using VetTime.Web.ViewModels.Home
@model VetTime.Web.ViewModels.Home.HomeViewModel

@{
    ViewData["Title"] ="Find your veterinarian doctor";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <form method="post" asp-controller="Vet" asp-action="Recommendations">

                <div class="form-floating mb-3">
                    <label asp-for="VetFirstName">First Name</label>
                    <input asp-for="VetFirstName" class="form-control"/>
                    
                </div>
                
                <div class="form-floating mb-3">
                    <label asp-for="VetLastName">Last Name</label>
                    <input asp-for="VetLastName" class="form-control"/>
                    
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CityName" class="form-label">City</label>
                    <select asp-for="CityName" class="form-control custom-dropdown">
                        <option value="">Choose City</option>
                        @foreach (string city in Model.Cities)
                        {
                            <option value="@city">@city</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Specialization" class="form-label">Specialization</label>
                    <select asp-for="Specialization" class="form-control custom-dropdown">
                        <option value="">Choose what type your animal is</option>
                        @foreach (SpecializationViewModel specialization in Model.Specializations)
                        {
                            <option value="@specialization.Name">@specialization.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        
        <div class="col-md-6 d-flex justify-content-center">
            <img src="https://img.freepik.com/premium-photo/male-veterinarian-cartoon-flat-design-isolated_776894-118392.jpg?w=2000"
                 alt="Veterinarian Illustration"
                 class="img-fluid rounded"
                 style="max-height: 500px; width: 100%; object-fit: contain;" />
        </div>

    </div>
</div>

@Html.Partial("_ValidationScriptsPartial")

