@model VetTime.Web.ViewModels.Home.VetDetailsViewModel

@{
    ViewData["Title"] = Model.FirstName + " " + Model.LastName;
}

<div class="container mt-5">
        <!-- Профилът на ветеринаря -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-4">
            <img src="@Model.ImageUrl"
                 alt="@Model.FirstName @Model.LastName"
                 class="img-fluid rounded"
                 style="max-height: 400px; width: 100%; object-fit: cover;" />
        </div>
        <div class="col-md-8">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p class="text-muted mb-2">@string.Join(", ", Model.Specializations)</p>
            <p class="mb-1"><strong>Address:</strong> @Model.Address</p>
            <p class="mb-3"><strong>Rating:</strong> @Model.Rate.ToString("0.0")</p>
        </div>
    </div>


    <hr />

    <h4>Available Appointment Slots</h4>
    @if (Model.AvailableSlots.Any())
    {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date &amp; Time</th>
                        <th>Type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var slot in Model.AvailableSlots)
                {
                            <tr>
                                <td>@slot.AppointmentTime.ToString("dddd, dd MMM yyyy HH:mm")</td>
                                <td>@slot.AppointmentType</td>
                                <td>
                                    <!-- Тук е бутона за записване -->
                                    <form asp-action="BookAppointment"
                                          asp-controller="Home"
                                          method="post"
                                          class="d-inline">
                                        <input type="hidden" name="appointmentId" value="@slot.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            Book Appointment
                                        </button>
                                    </form>
                                </td>
                            </tr>
                }
                </tbody>
            </table>

            <div class="mt-3">
                <a asp-action="SelectSlot"
                   asp-controller="Home"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary">
                    Select via Cards
                </a>
            </div>
    }
    else
    {
            <p class="text-muted">No available appointment slots.</p>
    }
</div>
